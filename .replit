run = "python manage.py runserver 0.0.0.0:3000"
modules = ["python-3.11:v20-20230920-d4ad2e4"]

[nix]
channel = "stable-23_05"

[env]
PYTHONPATH = "/home/runner/${REPL_SLUG}"
DJANGO_SETTINGS_MODULE = "uniform_inventory.settings"
PATH = "${REPLIT_PACKAGES}/bin:${PATH}"

[packager]
language = "python3"
ignoredPackages = ["*"]

[packager.features]
packageSearch = true
guessImports = true

[deployment]
run = ["sh", "-c", "python manage.py runserver 0.0.0.0:3000"]
deploymentTarget = "cloudrun" 